<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.poli.actividad9.PrimaryController">
   <children>
      <Label text="Primary View" textAlignment="CENTER" textFill="#6d03ae">
         <font>
            <Font name="Arial Italic" size="18.0" />
         </font></Label>
      <Button fx:id="primaryButton" cache="true" onAction="#switchToSecondary" text="Switch to Secondary View" textAlignment="CENTER">
         <textFill>
            <RadialGradient centerX="0.5138121546961326" centerY="0.48104265402843605" radius="0.5">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.6684210300445557" green="0.017543859779834747" blue="0.9473684430122375" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
         <font>
            <Font name="System Italic" size="20.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
